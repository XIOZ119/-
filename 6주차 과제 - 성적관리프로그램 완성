
#A+ = 4.5
#A0 = 4.0
#B+ = 3.5
#B0 = 3.0
#C+ = 2.5
#C0 = 2.0
#D+ = 1.5
#D0 = 1.0
#F = 0

class student :
    학과 = ""
    학번 = ""
    이름 = ""
    국어점수 = ""
    수학점수 = ""
    영어점수 = ""
    총점 = ""
    평균 = ""
    학점 = ""

    def up총점(self, value1):
        self.총점 += value1

    def up평균(self, value2):
        self.평균 += value2

    def up학점(self, value3):
        self.학점 += value3

student1 = student()
student1.학과 = "컴퓨터학과"
student1.학번 = 1000
student1.이름 = "홍길동"
student1.국어점수 = 80
student1.수학점수 = 50
student1.영어점수 = 90
student1.총점 = 0
student1.평균 = 0
student1.학점 = 0

student2 = student()
student2.학과 = "소프트웨어학과"
student2.학번 = 2000
student2.이름 = "김철수"
student2.국어점수 = 75
student2.수학점수 = 81
student2.영어점수 = 95
student2.총점 = 0
student2.평균 = 0
student2.학점 = 0

